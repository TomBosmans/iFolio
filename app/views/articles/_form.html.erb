<%= simple_form_for(@article) do |f| %>
  <%= f.input :name %>
  <%= f.input :caption %>
  <%= f.input :content %>
  <%= f.input :published %>
  <%= f.input :thumbnail %>
  <%= f.association :category, label_method: :name, value_method: :id, include_blank: false %>
  
  <%= f.button :submit %>
<% end %>
