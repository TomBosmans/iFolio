<div class="box">
  <div class="card" align="center" style="border-color:<%= article.category.color %>;">
    <a href=<%= article_path(article) %>>
      <img class="card-img-top img-rounded" src=<%= article.thumbnail %> alt=<%= t("errors.image_not_found") %>>
      <div class="card-block">
        <h4 class="card-title"><%= article.name %></h4>
        <p class="card-text text-muted"><%= article.caption %></p>
      </div>
      <div class="card-footer text-muted">
        <%= distance_of_time_in_words(article.created_at, Time.zone.now) %> ago
      </div>
    </a>
  </div>
</div>
