<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 .col-lg-offset-4 col-md-offset-4">
  <div class="panel panel-default centered">
    <div class="panel-heading">
      <h4 align="center"><%= t("authentication.forgot_your_password") %></h4>
    </div>
    <hr class="m-y-2">
    <div class="panel-body">
       <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: :horizontal_form, validate: true, html: { method: :post, class: 'form-horizontal' } ) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs form-group">
          <%= f.input :email, placeholder: t("authentication.enter_email"), required: true, autofocus: true %>
        </div>
        <div align="center" class="form-actions">
          <%= f.button :submit, t("authentication.send_instructions") %>
        </div>
      <% end %>
    </div>
    <hr class="m-y-2">
    <div align="center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
