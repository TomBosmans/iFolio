<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 .col-lg-offset-4 col-md-offset-4">
  <div class="panel panel-default centered">
    <div class="panel-heading">
      <h4 align="center"><%= t("authentication.edit_account") %></h4>
    </div>
    <hr class="m-y-2">
    <div class="panel-body">
       <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :horizontal_form, validate: true, html: { method: :put, class: 'form-horizontal' } ) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs form-group">
          <%= f.input :email, required: true, autofocus: true %>
      
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
      
          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
        </div>
        <div align="center" class="form-actions">
          <%= f.button :submit, t("authentication.update") %>
        </div>
      <% end %>
    </div>
    <hr class="m-y-2">
    <div align="center" class="alert alert-danger" role="alert">
      <h3>Cancel my account</h3>
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "alert-link" %></p>
    </div>
    <hr class="m-y-2">
    <div align="center">
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>

